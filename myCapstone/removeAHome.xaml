<Window x:Class="myCapstone.removeAHome"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:myCapstone"
        mc:Ignorable="d"
        Title="removeAHome" Height="292" Width="369.5">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="28,32,0,0" TextWrapping="Wrap" Text="Select a Home to Remove" VerticalAlignment="Top"/>
        <ListBox x:Name="RemoveListBox" ItemsSource="{Binding homeCollection}" HorizontalAlignment="Left" Height="153" Margin="28,84,0,0" VerticalAlignment="Top" Width="185" SelectionChanged="RemoveListBox_SelectionChanged"/>
        <Button Content="Remove!" HorizontalAlignment="Left" Margin="268,171,0,0" VerticalAlignment="Top" Width="74" Click="Button_Click"/>
        <Button Content="Exit!" HorizontalAlignment="Left" Margin="267,217,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>

    </Grid>
</Window>
